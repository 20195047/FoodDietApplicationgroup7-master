<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="19dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Running In Place"
        android:textSize="28sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/skyBlue"/>
    <TextView
        android:id="@+id/step1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. Lift Lift your right arm and left foot at the same time."
        android:textSize="15sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_below="@+id/title"
        android:textStyle="italic"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/step2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2. Raise your knee as high as your hips."
        android:textSize="15sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_below="@+id/step1"
        android:textStyle="italic"/>
    <TextView
        android:id="@+id/step3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3. Then switch to the opposite foot, quickly lifting your right foot to hip height."
        android:textSize="15sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_below="@+id/step2"
        android:textStyle="italic"/>
    <TextView
        android:id="@+id/step4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4. At the same time, move your right arm back and your left arm forward and up."
        android:textSize="15sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_below="@+id/step3"
        android:textStyle="italic"/>
    <TextView
        android:id="@+id/step5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5. Continue these movements for 45 seconds"
        android:textSize="15sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_below="@+id/step4"
        android:textStyle="italic"/>




</RelativeLayout>