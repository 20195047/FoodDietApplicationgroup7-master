<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="JUMPING JACKS"
        android:textSize="28sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/skyBlue"/>
    <TextView
        android:id="@+id/step1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. Stand up straight, with your feet together and your hands down by your side"
        android:textSize="15sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_below="@+id/title"
        android:textStyle="italic"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/step2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2. Jump your feet out to the side while raising your arms to the side and above your head."
        android:textSize="15sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_below="@+id/step1"
        android:textStyle="italic"/>
    <TextView
        android:id="@+id/step3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3. Then In one fluid motion, jump back to the starting position by lowering the arms and jumping the feet back together."
        android:textSize="15sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_below="@+id/step2"
        android:textStyle="italic"/>
    <TextView
        android:id="@+id/step4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4. That is one jumping jack."
        android:textSize="15sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_below="@+id/step3"
        android:textStyle="italic"/>
    <TextView
        android:id="@+id/step5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5. Do this about 10 basic jumping jacks."
        android:textSize="15sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_below="@+id/step4"
        android:textStyle="italic"/>


</RelativeLayout>