<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PUSH-UPS"
        android:textSize="28sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/skyBlue"/>
    <TextView
        android:id="@+id/step1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. Do a prone position"
        android:textSize="15sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_below="@+id/title"
        android:textStyle="italic"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/step2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2. Put your hands under the shoulders with the elbows extended."
        android:textSize="15sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_below="@+id/step1"
        android:textStyle="italic"/>
    <TextView
        android:id="@+id/step3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3. Then Keep the back and legs straight with the toes touching the ground."
        android:textSize="15sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_below="@+id/step2"
        android:textStyle="italic"/>
    <TextView
        android:id="@+id/step4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4. Then lower your body until the upper arm is parallel to the ground."
        android:textSize="15sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_below="@+id/step3"
        android:textStyle="italic"/>
    <TextView
        android:id="@+id/step5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5. Then reverse the movement and raise the body until arm is extended."
        android:textSize="15sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_below="@+id/step4"
        android:textStyle="italic"/>
    <TextView
        android:id="@+id/step6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="6. Do this about 10 basic push-ups."
        android:textSize="15sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_below="@+id/step5"
        android:textStyle="italic"/>

</RelativeLayout>